@model GitApp.Views.Repository.Dto.RepositoryCreateDto

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-2">Create a Repository</h1>
<hr class="bg-primary w-75">
<form class="mx-auto w-50" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="text-dark d-flex justify-content-center">
            <label asp-for="Name" class="control-label"></label>
            </div>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="text-dark d-flex justify-content-center">
                <label asp-for="Type" class="control-label"></label>
            </div>
            <select asp-for="Type" class="form-control"></select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-block btn-primary text-white mb-3">Create</button>
        </div>
</form>
   


