@model GitApp.Views.Commit.Dto.CommitCreateDto

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-2">Commit to @Model.Name</h1>
<hr class="bg-primary w-75">
<form class="mx-auto w-50" asp-action="CreatePost">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="text-dark d-flex justify-content-center">
            <label asp-for="Description" class="control-label"></label>
            </div>
            <textarea asp-for="Description" class="form-control" ></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-block btn-primary text-white mb-3">Commit</button>
    </div>
</form>
   