@using BattleCards_App.Dto
@model UserRegisterMV
@{
    ViewData["Title"] = "Register Page";
}


<h1 class="text-center mt-2">Register</h1>
<hr class="bg-primary w-75">
<form class="mx-auto w-50" asp-controller="Users", asp-action="RegisterPost">
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="label-holder textCol d-flex justify-content-center">
            <label for="username" class="h4 mb-2 text-black-50">Username</label>
        </div>
        <input type="text" class="form-control" asp-for="@Model.Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="label-holder d-flex justify-content-center">
            <label for="email" cclass="h4 mb-2 text-black-50">Email</label>
        </div>
        <input type="email" class="form-control" asp-for="@Model.Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="label-holder d-flex justify-content-center">
            <label for="password" class="h4 mb-2 text-black-50">Password</label>
        </div>
        <input type="password" class="form-control" asp-for="@Model.Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="label-holder  d-flex justify-content-center">
            <label for="confirmPassword" class="h4 mb-2 text-black-50">Confirm Password</label>
        </div>
        <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-block btn-primary text-white mb-3" value="Register">Register</button>
    </div>
</form>